<div class="category-container">
  <% @title = "New Transaction" %>
  <%= render "shared/navbar", locals: { title: @title }, back: true %>

  <div class="back-link mt-2">
    <%= link_to "Back to Transactions", category_transactions_path(@category), class: 'btn btn-primary' %>
  </div>

  <%= form_with model: @entity, url: category_transactions_path(@category), class: "py-12" do |form| %>
    <div class="row justify-content-center mt-5">
          <div class="col-lg-6 p-5 border">
            <%= form.text_field :name, required: true, placeholder: "Enter New Transaction Name", class: 'form-control mb-5'%>
            <%= form.number_field :amount, required: true, placeholder: "Amount (USD)", class: 'form-control'%>
          </div>
    </div>
    <%= form.submit "Create Transaction", class: 'btn btn-secondary fixed-bottom w-100', style: 'background-color: #5fb523; padding: 1rem 0' %>
  <% end %>
</div>
