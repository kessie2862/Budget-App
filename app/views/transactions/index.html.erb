<% @title = "Transactions" %>
  <%= render "shared/navbar", locals: { title: @title }, back: true %>

<div class="mb-10">
  <div class="back-link mt-2">
    <%= link_to "Back to Categories", categories_home_path, class: 'btn btn-primary' %>
  </div>
  <% if @transactions.empty?%>
    <p class="text-center pt-16">Currently you don't have any transaction</p>
  <% else %>
    <ul class="list-group mb-5 list-group-flush pt-12">
      <li class="list-group-item d-flex flex-column align-items-center gap-3 px-3 py-5 my-5 bg-white">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <figure class="image">
              <img class="rounded mx-auto d-block" src="<%= @category.icon %>" alt="user icon"">
            </figure>
            <div class="text-lg opacity-75 font-semibold text-uppercase"><%= @category.name %></div>
          </div>
          <div class="text-center mb-4">
            <div class="text-gray-300 text-sm font-light">Total spent on this category</div>
            <div class="font-extrabold text-3xl">$ <%= number_with_delimiter(@total) %></div>
          </div>
      </li>
      <% @transactions.each do |transaction| %>
        <li class="list-group-item d-flex align-items-center px-3 py-5 my-5 bg-white">
          <div class="d-flex justify-content-between align-items-center p-2">
              <span class="capitalize text-gray-500 font-semibold"><%= transaction.name %> - </span>
              <span class="font-semibold text-lg"> $<%= number_with_delimiter(transaction.amount)%></span>
          </div>
          <div class="d-flex justify-content-between align-items-center p-1">
              <span class="capitalize text-gray-300 font-light"><%= transaction.created_at.strftime("%d %b, %y") %></span>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "ADD NEW TRANSACTION", new_category_transaction_path(@category), class: 'fixed-bottom border border-white text-center text-white py-3 w-full', style: 'background-color: #5fb523; padding: 1rem 0' %>
</div>
